{{- $title  := site.Title -}}
{{- $mail   := site.Params.mail -}}
{{- $pctx   := . -}}
{{- if .IsHome -}}{{ $pctx = site }}{{- end -}}
{{- $pages  := slice -}}
{{- if or $.IsHome $.IsSection -}}
  {{- $pages = $pctx.RegularPages -}}
{{- else -}}
  {{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit  := site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
  {{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ $title }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ i18n "recent" }} {{ $title }}</description>
    <generator>Hugo -- gohugo.io</generator>
    {{ with site.Language }}<language>{{ . }}</language>{{ end }}
    {{ with $mail }}<managingEditor>{{ . }}{{ with $title }} ({{ . }}){{ end }}</managingEditor>{{ end }}
    {{ with $mail }}<webMaster>{{ . }}{{ with $title }} ({{ . }}){{ end }}</webMaster>{{ end }}
    {{ with site.Copyright }}<copyright>{{ . }}</copyright>{{ end }}
    {{ if not .Date.IsZero }}<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{ with .OutputFormats.Get "RSS" }}<atom:link href="{{ .Permalink }}" rel="self" type="{{ .MediaType }}" />{{ end }}
    {{ range $pages }}
      {{ if not .Params.seo.noindex }}
        <item>
          <title>{{ .Title }}</title>
          <link>{{ .Permalink }}</link>
          <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
          {{ with $mail }}<author>{{ . }}{{ with $title }} ({{ . }}){{ end }}</author>{{ end }}
          <guid>{{ .Permalink }}</guid>
          <description>{{ .Params.sum | default .Summary | default .Params.seo.desc | html }}</description>
        </item>
      {{ end }}
    {{ end }}
  </channel>
</rss>